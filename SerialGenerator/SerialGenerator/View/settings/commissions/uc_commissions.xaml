                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                            <ColumnDefinition Width="40"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Path  Fill="#178DD2" Stretch="Fill" Margin="20,10,0,10" 
                          HorizontalAlignment="Center" Grid.Column="0"  
                     VerticalAlignment="Center" Height="60" Width="60"
                               FlowDirection="LeftToRight"
                          Data="{StaticResource accuracySymbol}"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Top"  Grid.ColumnSpan="2" Margin="5,20,0,0" HorizontalAlignment="Left">
                            <TextBlock x:Name="txt_acc" HorizontalAlignment="Right" Width="160" Foreground="#6e6e6e" FontWeight="SemiBold" Text="accuracy" FontSize="18"></TextBlock>
                              <Grid>
                                <ComboBox Grid.Column="0" x:Name="cb_accuracy" Padding="10,0,5,0"    TextBlock.Foreground="#4E4E4E"
                                  TabIndex="3"  TextBlock.FontSize="12" Margin="10,10,0,0" VerticalAlignment="Center"   
                                  Background="#f8f8f8"   BorderBrush="#737373"    
                                  BorderThickness="0"  FontFamily="{StaticResource Font-cairo-light}" >
                                    <ComboBox.ToolTip>
                                        <ToolTip x:Name="tt_accuracy" 
                                                          Placement="left" 
                                                          HorizontalOffset="35"
                                                          PlacementRectangle="50,0,0,0"
                                                          VerticalOffset="20"/>
                                    </ComboBox.ToolTip>
                                </ComboBox>
                                <Path Fill="#E81123" Stretch="Fill" Margin="0,15,15,15" x:Name="p_errorAccuracy"
                                  HorizontalAlignment="Right"  Grid.Row="0"  Visibility="Collapsed"
                                  VerticalAlignment="Center" Width="15"  Height="15"
                                  Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M12,13 C11.45,13 11,12.55 11,12 L11,8 C11,7.45 11.45,7 12,7 C12.55,7 13,7.45 13,8 L13,12 C13,12.55 12.55,13 12,13 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z">
                                    <Path.ToolTip>
                                        <ToolTip  x:Name="tt_errorAccuracy"  Content="Name Not Validate"  Style="{StaticResource ToolTipError}"/>
                                    </Path.ToolTip>
                                </Path>
                            </Grid>
                        </StackPanel>
                        <Border Height="25" Width="25" CornerRadius="25" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,10,10"
                            Background="White" HorizontalAlignment="Center">
                            <Button Background="Transparent" BorderThickness="0" x:Name="btn_saveAccuracy" 
                             Padding="0" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Height="auto" Width="auto" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="Btn_saveAccuracy_Click"  >
                                <Path       VerticalAlignment="Center" HorizontalAlignment="Center"
                                Height="25" Width="25"  
                            Fill="#178DD2" Stretch="Fill" 
                       Grid.Column="0"  
                            Data="{StaticResource saveBtn}"/>
                            </Button>
                        </Border>
                    </Grid>
                </Border>


            </WrapPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
