                            <Grid   >
                                <TextBox  x:Name="tb_activeCode" Text="{Binding activateCode, Mode=OneWay}"
                                  Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                  Padding="10,0,5,0"  
                                 materialDesign:TextFieldAssist.CharacterCounterStyle="{Binding}"
                                  materialDesign:HintAssist.Hint="Activation Code..."  
                                  Foreground="#4E4E4E"
                                 Margin="4,0"  BorderThickness="0"
                            Grid.Column="1"  Height="70" TextWrapping="Wrap"/>
                            </Grid>
                        </Border>
                        <Button Grid.Row="0" Grid.ColumnSpan="3" x:Name="btn_generatecode"  Margin="10,20,10,5"  
